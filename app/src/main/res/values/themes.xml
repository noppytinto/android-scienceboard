<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScienceBoard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">#814211</item>
        <item name="colorOnSecondary">@color/white</item>
<!--        <item name="android:textColorPrimary">@color/black</item>-->
<!--        <item name="actionMenuTextColor">@color/black</item>-->
<!--        <item name="android:actionMenuTextColor">@color/black</item>-->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
        <!-- Customize your theme here. -->

        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange_light</item>
        <item name="android:textColor">@color/black</item>

        <!-- dropdown menu style -->
<!--        <item name="android:dropDownListViewStyle">@style/ScienceBoard.PopupMenuListView</item>-->
    </style>

    <style name="Theme.ScienceBoard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="ScienceBoard.PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/light_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>