<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScienceBoard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">#814211</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item> <!-- (chips background) -->
        <item name="colorAccent">@color/orange</item>
        <item name="android:colorBackground">@color/gray_100</item> <!-- (background) -->
        <item name="android:textColorSecondary">@color/gray_500</item> <!-- ("more icon" menu) -->
        <!-- Customize your theme here. -->

        <!-- TEXT -->
        <item name="android:textColor">@color/black</item>

        <!-- TABS -->
        <item name="myTabTextColor">@color/gray_500</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabsBackgroundColor">@color/white</item>

        <!-- TOOLBAR -->
        <item name="toolbarBackgroundColor">@color/white</item>
        <item name="toolbarTitleTextColor">@color/black</item>
        <item name="menuItemColor">@color/black</item>
        <!-- WEBVIEW TOOLBAR -->
        <item name="webViewToolbarBackgroundColor">@color/dark</item>
        <item name="webViewToolbarTitleTextColor">@color/white</item>
        <item name="webViewToolbarMenuItemColor">@color/white</item>
        <!-- HOME TOOLBAR -->
        <item name="logoTextColor">@color/black</item>
        <item name="homeToolbarBackgroundColor">@color/white</item>
        <item name="homeToolbarTitleTextColor">@color/white</item>
        <!-- BOOKMARKS TOOLBAR -->
        <item name="exitEditBookmarksIconColor">@color/black</item>
        <item name="selectAllBookmarksIconColor">@color/black</item>
        <item name="editBookmarksIconColor">@color/black</item>
        <!-- TOPIC FEEDS TOOLBAR -->
        <item name="navigationIconColor">@color/black</item>
<!--        <item name="navigationIconTint">@color/red</item>-->
        <!-- TOPIC FEEDS COLLAPSING TOOLBAR -->
        <item name="myContentScrimColor">@color/white</item>
        <item name="myCollapsingToolbarColor">@color/white</item>

        <!-- ARTICLE VIEWHOLDER -->
        <item name="articleDividerColor">@color/gray_300</item>
        <item name="articleBookmarksIconColor">@color/gray_350</item>
        <item name="articleCheckedBookmarksIconColor">@color/yellow_A700</item>
        <item name="articleBookmarksIconRippleColor">@color/yellow_A700</item>
        <item name="articleSourcesInfoTextColor">@color/gray_600</item>

        <!-- DIALOGS -->
        <item name="alterDialogButtonTextColor">@color/black</item>

        <!-- AD BUTTON -->
        <item name="adButtonTextColor">@color/gray_500</item>
        <item name="adButtonStrokeColor">@color/gray_300</item>
        <item name="adButtonRippleColor">@color/orange</item>
        <!-- switch topic FAB -->
        <item name="switchTopicFABbackgroundColor">@color/black</item>
        <item name="switchTopicFABiconColor">@color/white</item>

        <!-- topic item in customize topic fragment -->
        <item name="topicItemTextColor_customizeTopicsFragment">@color/black</item>
        <!-- switch theme button -->
        <item name="switchThemeMoonIconColor">#A2D8FF</item>
        <!-- switch theme button -->
        <item name="switchThemeSunIconColor">#FFFAB3</item>

        <!-- BOTTOM BAR -->
        <item name="bottomBarBackgroundColor">@color/white</item>
        <item name="bottomBarIconsColor_selected">@color/black</item>
        <item name="bottomBarIconsColor_unselected">@color/gray_500</item>

        <!-- CUSTOMISE TOPICS FRAGMENT -->
        <item name="customizeTopicsFragmentSubtitleTextColor">@color/gray_600</item>

        <!-- NATIVE AD -->
        <item name="adAttributionBackgroundColor">@color/gray_400</item>






        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->

        <!--        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
        <!-- Customize your theme here. -->


        <!-- dropdown menu style -->
<!--        <item name="android:dropDownListViewStyle">@style/ScienceBoard.PopupMenuListView</item>-->

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.ScienceBoard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="ScienceBoard.PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/gray_500</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


<!--    <style name="Theme.ScienceBoard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
<!--    <style name="Theme.ScienceBoard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>