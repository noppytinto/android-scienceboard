<resources>



    <style name="Theme.ScienceBoard.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>







    <!-- CINEMATES BUTTON ROUNDED -->
    <style name="ScienceBoard.Button.Rounded" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:textAppearance">@style/Cinemates.Button.Rounded.TextAppearance</item>-->
        <item name="shapeAppearance">@style/cinemates_shape_rounded</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="rippleColor">@color/orange</item>
        <item name="elevation">15dp</item>

    </style>
<!--    <style name="Cinemates.Button.Rounded.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">-->
<!--        <item name="fontFamily">@font/poppins_semibold</item>-->
<!--        <item name="android:textSize">16sp</item>-->
<!--    </style>-->



    <style name="cinemates_shape_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>




    <!-- CINEMATES BUTTON CHIP CHOICE -->
    <style name="ScienceBoard.Button.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_choice_bg_states</item>
        <item name="chipStrokeColor">@color/color_states_chip_choice_stroke</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke_width</item>
        <item name="android:textAppearance">@style/Cinemates.Button.Chip.Choice.TextAppearance</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipMinHeight">@dimen/chip_min_height</item>
    </style>
    <style name="Cinemates.Button.Chip.Choice.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/chip_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/chip_letter_spacing</item>
        <item name="android:textColor">@color/color_states_chip_choice_text</item>
    </style>



    <style name="TextAppearance.MdcTypographyStyles.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/button_default_text_size</item>
    </style>












</resources>
