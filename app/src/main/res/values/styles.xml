<resources>



    <style name="Theme.ScienceBoard.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>







    <!-- ScienceBoard BUTTON ROUNDED -->
    <style name="ScienceBoard.Button.Rounded" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:textAppearance">@style/ScienceBoard.Button.Rounded.TextAppearance</item>-->
        <item name="shapeAppearance">@style/scienceboard_shape_rounded</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="rippleColor">@color/orange</item>
        <item name="elevation">15dp</item>

    </style>
<!--    <style name="ScienceBoard.Button.Rounded.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">-->
<!--        <item name="fontFamily">@font/poppins_semibold</item>-->
<!--        <item name="android:textSize">16sp</item>-->
<!--    </style>-->



    <style name="scienceboard_shape_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>




    <!-- ScienceBoard BUTTON CHIP CHOICE -->
    <style name="ScienceBoard.Button.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_choice_bg_states</item>
        <item name="chipStrokeColor">@color/color_states_chip_choice_stroke</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke_width</item>
        <item name="android:textAppearance">@style/ScienceBoard.Button.Chip.Choice.TextAppearance</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipMinHeight">@dimen/chip_min_height</item>
    </style>
    <style name="ScienceBoard.Button.Chip.Choice.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/chip_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/chip_letter_spacing</item>
        <item name="android:textColor">@color/color_states_chip_choice_text</item>
    </style>



    <style name="TextAppearance.MdcTypographyStyles.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/button_default_text_size</item>
    </style>






    <style name="ScienceBoard.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minWidth">35dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="strokeWidth">0dp</item>
    </style>






    <!-- TABS -->
    <style name="ScienceBoard.Tab.Tablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@color/orange</item>
        <item name="tabTextColor">?attr/myTabTextColor</item>
        <item name="android:backgroundTint">?attr/tabsBackgroundColor</item>
    </style>


    <!-- TOOLBAR -->
    <style name="ScienceBoard.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/toolbarBackgroundColor</item>
        <item name="titleTextColor">?attr/toolbarTitleTextColor</item>
        <item name="android:elevation">@dimen/default_toolbar_elevation</item>
    </style>
    <!-- WEBVIEW TOOLBAR -->
    <style name="ScienceBoard.Toolbar.WebViewToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/webViewToolbarBackgroundColor</item>
        <item name="titleTextColor">?attr/webViewToolbarTitleTextColor</item>
        <item name="android:elevation">@dimen/default_toolbar_elevation</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
        <item name="actionOverflowButtonStyle">@color/red</item>
        <item name="android:actionMenuTextColor">@color/red</item>
        <item name="menuItemColor">@color/red</item>
        <item name="popupMenuBackground">@color/red</item>
    </style>
    <!-- EXPLORE TOOLBAR -->
    <style name="ScienceBoard.Toolbar.ExploreToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/exploreToolbarBackgroundColor</item>
        <item name="titleTextColor">?attr/exploreToolbarTitleTextColor</item>
    </style>


    <style name="ScienceBoard.Toolbar.Logo" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/logoTextColor</item>
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:fontFamily">@font/playfair_display_black</item>
    </style>




    <!-- DIALOGS -->
    <style name="ScieceBoard.Dialog.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/alterDialogButtonTextColor</item>
    </style>
    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/alterDialogButtonTextColor</item>
    </style>
    <style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/alterDialogButtonTextColor</item>
    </style>


    <!-- AD BUTTON -->
    <style name="ScienceBoard.Button.AdButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/adButtonTextColor</item>
        <item name="rippleColor">?attr/adButtonRippleColor</item>
        <item name="android:padding">3dp</item>
        <item name="strokeColor">?attr/adButtonStrokeColor</item>
    </style>


    <!-- APP BARS -->
    <style name="ScieceBoard.Toolbar.CollapsingToolbar.ExpandendTitleTextAppearance"
        parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ScieceBoard.Toolbar.CollapsingToolbar.CollapsedTitleTextAppearance"
        parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- TOOLBAR -->
    <style name="ScieceBoard.Toolbar.TitleTextAppearance"
        parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
