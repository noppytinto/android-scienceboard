<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScienceBoard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorSecondary">@color/white</item> <!-- ("more icon" menu) -->
        <!-- Customize your theme here. -->

        <!-- TEXT -->
        <item name="android:textColor">@color/white</item>

        <!-- TABS -->
        <item name="myTabTextColor">@color/dark_gray</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabsBackgroundColor">@color/black</item>

        <!-- TOOLBAR -->
        <item name="toolbarBackgroundColor">@color/black</item>
        <item name="toolbarTitleTextColor">@color/white</item>
        <item name="menuItemColor">@color/white</item>
        <!-- WEBVIEW TOOLBAR -->
        <item name="webViewToolbarBackgroundColor">@color/dark</item>
        <item name="webViewToolbarTitleTextColor">@color/white</item>
        <item name="webViewToolbarMenuItemColor">@color/white</item>
        <!-- EXPLORE TOOLBAR -->
        <item name="logoTextColor">@color/white</item>
        <item name="exploreToolbarBackgroundColor">@color/black</item>
        <item name="exploreToolbarTitleTextColor">@color/white</item>
        <!-- BOOKMARKS TOOLBAR -->
        <item name="exitEditBookmarksIconColor">@color/white</item>
        <item name="selectAllBookmarksIconColor">@color/white</item>
        <item name="editBookmarksIconColor">@color/white</item>

        <!-- ARTICLE VIEWHOLDER -->
        <item name="articleDividerColor">@color/gray_800</item>
        <item name="articleBookmarksIconColor">@color/gray_700</item>
        <item name="articleCheckedBookmarksIconColor">@color/yellow_A700</item>
        <item name="articleBookmarksIconRippleColor">@color/yellow_A700</item>
        <item name="articleSourcesInfoTextColor">@color/gray_500</item>

        <!-- DIALOGS -->
        <item name="alterDialogButtonTextColor">@color/white</item>

        <!-- AD BUTTON -->
        <item name="adButtonTextColor">@color/gray_600</item>
        <item name="adButtonStrokeColor">@color/gray_700</item>
        <item name="adButtonRippleColor">@color/orange</item>



        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
        <!-- Customize your theme here. -->


        <!-- dropdown menu style -->
<!--        <item name="android:dropDownListViewStyle">@style/ScienceBoard.PopupMenuListView</item>-->
    </style>

    <style name="Theme.ScienceBoard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>


    <style name="ScienceBoard.PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/gray_500</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>