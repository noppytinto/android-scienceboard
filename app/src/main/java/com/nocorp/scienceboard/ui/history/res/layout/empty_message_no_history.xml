<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_emptyMessageNoHistory"
        android:layout_width="133dp"
        android:layout_height="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_undraw_empty_box" />

    <TextView
        android:id="@+id/textView_emptyMessageNoHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_empty_message_no_history"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView_emptyMessageNoHistory"
        app:layout_constraintStart_toStartOf="@+id/imageView_emptyMessageNoHistory"
        app:layout_constraintTop_toBottomOf="@+id/imageView_emptyMessageNoHistory" />

</androidx.constraintlayout.widget.ConstraintLayout>